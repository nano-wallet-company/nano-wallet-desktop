<div class="card mb-2 {{if revealSeed 'border-danger' 'border-secondary'}}">
  <div class="card-body p-3">
    <div class="row">
      <div class="col-auto pr-0">
        <button type="button" class="btn btn-lg {{if revealSeed 'btn-outline-danger' 'btn-outline-secondary'}}" {{action (toggle 'revealSeed' this)}}>
          {{fa-icon (if revealSeed 'unlock' 'lock') ariaLabel=(t 'reveal') size="lg" ariaHidden=false}}
        </button>
      </div>
      <div class="col">
        <h4>
          {{t 'seed'}}
        </h4>
        {{#unless revealSeed}}
          <h6 class="text-muted text-monospace {{unless revealSeed 'mb-0'}}">*******</h6>
        {{/unless}}
        {{#if revealSeed}}
          {{#bs-form model=(changeset (hash seed=seed)) as |form|}}
            {{#form.element property="seed" as |el|}}
              {{!-- {{password-toggle inputId=el.id label=(t 'seed') value=el.value placeholder=(t 'unknown') readonly=true}} --}}
              <input id={{el.id}} type="text" class="form-control text-monospace" value={{seed}} aria-label={{t 'seed'}}>
              
            {{/form.element}}
            <div class="row">
              <div class="col-auto pr-0">
                {{qr-code text=seed width=170 height=170}}
              </div>
              <div class="col">
                <div class="alert alert-danger">
                  <h4 class="alert-heading">
                    Warning!
                  </h4>
                  <hr>
                  <p>
                    Seed must be backed up yada yada
                  </p>
                </div>
              </div>
            </div>
            
          {{/bs-form}}
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="card mb-2 {{if changeRep 'border-danger' 'border-secondary'}}">
