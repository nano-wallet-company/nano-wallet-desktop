<div class="card mb-2 {{if items.changeRep 'border-danger' 'border-secondary'}}">
  <div class="card-header {{if items.changeRep 'bg-danger'}}" {{action (action toggleItems 'changeRep')}} role="button">
    <div class="row align-items-center">
      <div class="col">
        <p class="h4 {{if items.changeRep 'text-white mb-0'}}">
          {{t 'representative'}}
        </p>
        {{#unless items.changeRep}}
          <h6 class="text-muted text-monospace {{unless items.changeRep 'mb-0'}}">{{representative}}</h6>
        {{/unless}}
      </div>
      <div class="col-auto {{if items.changeRep 'text-white'}}">
        {{fa-icon (if items.changeRep 'unlock' 'lock') ariaLabel=(t 'reveal') size="3" ariaHidden=false}}
      </div>
    </div>
  </div>
  {{#liquid-if items.changeRep}}
    <div class="card-body p-3">
      {{#bs-form model=(changeset (hash representative=representative) ChangeRepresentativeValidations) onSubmit=(action onChangeRepresentative wallet) as |form|}}
        {{#form.element controlType="text" invisibleLabel='Representative' property='representative'
      minlength=64 maxlength=65 required=true pattern="^(xrb|nano)(_|-)[13](?![lv])[a-z1-9]{59}$" as |el|}}
          {{el.control class="text-truncate text-monospace"}}
        {{/form.element}}
        {{#bs-button buttonType="submit" type="warning" icon="fa fa-cubes" class="w-100"}}
          {{t 'wallets.settings.changeRepresentative'}}
        {{/bs-button}}
      {{/bs-form}}
    </div>
  {{/liquid-if}}
</div>

<div class="card mb-2 {{if items.revealSeed 'border-danger' 'border-secondary'}}">
  <div class="card-header {{if items.revealSeed 'bg-danger'}}" {{action (action toggleItems 'revealSeed')}} role="button">
    <div class="row align-items-center">
      <div class="col">
        <p class="h4 mb-0 {{if items.revealSeed 'text-white'}}">
          {{t 'seed'}}
        </p>
      </div>
      <div class="col-auto {{if items.revealSeed 'text-white'}}">
        {{fa-icon (if items.revealSeed 'unlock' 'lock') ariaLabel=(t 'reveal') size="3" ariaHidden=false}}
      </div>
    </div>
  </div>
  {{#liquid-if items.revealSeed}}
    <div class="card-body p-3">
      {{#bs-form model=(changeset (hash seed=seed)) as |form|}}
        {{#form.element property="seed" as |el|}}
          <input id={{el.id}} type="text" readonly=true class="form-control text-monospace" value={{seed}} aria-label={{t 'seed'}}>
          
        {{/form.element}}
        <div class="row">
          <div class="col-auto pr-0">
            {{qr-code text=seed width=170 height=170}}
          </div>
          <div class="col">
            <div class="alert alert-danger">
              <h4 class="alert-heading">
                {{t 'warning'}}
              </h4>
              <hr>
              <p class="mb-0">
                {{t 'wallets.settings.seedBestPractices'}}
              </p>
            </div>
          </div>
        </div>
      {{/bs-form}}
    </div>
  {{/liquid-if}}
</div>

