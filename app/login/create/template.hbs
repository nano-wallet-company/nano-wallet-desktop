{{#bs-modal onHide=(route-action 'cancel') onSubmit=(route-action 'confirm') as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">
      {{fa-icon 'exclamation-triangle' class="text-danger"}}
      {{t 'login.createWallet.title'}}
    </h4>
  {{/modal.header}}
  {{#modal.body}}
    <p class="lead">{{t 'login.createWallet.lead'}}</p>
    <p>{{t 'login.createWallet.warning' htmlSafe=true}}</p>
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close) type="secondary"}}
      {{t 'cancel'}}
    {{/bs-button}}
    {{#bs-button onClick=(action modal.submit) type="danger"}}
      {{fa-icon 'sign-out'}}
      {{t 'login.createWallet.create'}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}